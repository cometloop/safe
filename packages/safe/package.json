{
  "name": "@cometloop/safe",
  "version": "0.0.1",
  "description": "Zero-dependency, type-safe error handling using a result tuple pattern for TypeScript",
  "author": "cometloop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cometloop/safe.git",
    "directory": "packages/safe"
  },
  "homepage": "https://github.com/cometloop/safe#readme",
  "bugs": {
    "url": "https://github.com/cometloop/safe/issues"
  },
  "keywords": [
    "error-handling",
    "result",
    "typescript",
    "safe",
    "tuple",
    "try-catch",
    "type-safe"
  ],
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@core/eslint-config": "workspace:*",
    "@core/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.57.0",
    "tsup": "^8.5.1",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16"
  }
}
